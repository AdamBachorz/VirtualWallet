@using Microsoft.AspNetCore.Identity
@using VirtualWallet.DAL.Services.Interfaces 
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IUserContainer UserContainer

@{ 
    var current = UserContainer.GetCurrent();
}

<ul class="navbar-nav">
    @if (current != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/User/Index" title="Manage">@current.Greeting</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj się</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Rejestracja</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Zaloguj się</a>
        </li>
    }
</ul>


